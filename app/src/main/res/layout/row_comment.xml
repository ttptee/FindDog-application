<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usericon"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"></ImageView>

        <ImageView
            android:visibility="visible"
            android:id="@+id/commentPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/comment"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="122dp">

        </ImageView>

        <TextView
            android:id="@+id/namee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userpic"
            android:layout_marginTop="2dp"
            android:text="Username"></TextView>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namee"
            android:layout_toRightOf="@id/userpic"
            android:layout_marginTop="4dp"
            android:text="comment"></TextView>
        <!--<TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22/06/1998"
            android:layout_toEndOf="@+id/userpic"
            android:layout_below="@id/comment"></TextView>-->

    </RelativeLayout>


</androidx.cardview.widget.CardView>